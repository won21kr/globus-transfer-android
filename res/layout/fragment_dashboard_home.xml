<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:padding="25dp" >
    
	<LinearLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/welcome_username"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/light"
	        android:paddingBottom="10dp"
	        android:text="@string/home_welcome_username" />
	    
	    <TextView
	        android:id="@+id/task_summary"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="5dp"
	        style="@android:style/TextAppearance.Medium"
	        android:text="@string/home_task_summary_title" />
	    
	    <ProgressBar
	        android:id="@+id/home_task_summary_progress_bar"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="3dp"
	        android:layout_marginTop="10dp"
	        android:visibility="invisible" />
	    
	    <TextView
	        android:id="@+id/task_summary_content"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:visibility="invisible" />
	        	    
	</LinearLayout>
	
</ScrollView>